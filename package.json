{
  "name": "vscode-livescript-preview",
  "displayName": "LiveScript Preview",
  "description": "LiveScript previewer for Visual Studio Code",
  "version": "1.0.0",
  "author": "Eheitherd Ceres",
  "publisher": "eheitherd",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "livescript",
    "preview",
    "visual studio code",
    "vs code",
    "extension"
  ],
  "galleryBanner": {
    "coloe": "#e8fff7",
    "theme": "light"
  },
  "main": "./lib/extension",
  "activationEvents": [
    "onCommand:extension.livescript-preview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "livescript",
        "extensions": [
          ".ls",
          ".lson"
        ],
        "aliases": [
          "LiveScript",
          "ls"
        ]
      },
      {
        "id": "javascript",
        "filenamePatterns": [
          "* LiveScript Preview"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.livescript-preview",
        "title": "LiveScript Preview"
      }
    ],
    "keybindings": [
      {
        "command": "extension.livescript-preview",
        "key": "ctrl+shift+/",
        "when": "editorTextFocus && editorLangId == 'livescript'"
      }
    ]
  },
  "dependencies": {
    "livescript": "^1.5.0"
  },
  "devDependencies": {
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-livescript": "^3.0.1",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.7",
    "ls-lint": "^0.1.2",
    "vinyl-paths": "^2.1.0",
    "vscode": "^1.0.3"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/eheitherd/vscode-livescript-preview.git"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "gulp build",
    "build": "gulp build",
    "watch": "gulp watch",
    "lint": "ls-lint \"./src/**/*.ls?(on)\"",
    "clean": "gulp clean"
  }
}
